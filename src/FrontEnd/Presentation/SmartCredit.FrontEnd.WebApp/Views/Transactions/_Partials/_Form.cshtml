@using SmartCredit.FrontEnd.WebApp.ViewModels
@model TransactionsViewModel

@{
    ViewData["Title"] = Model.Type == 2 ? "Nuevo pago" : "Nueva compra";
}

<h1 class="title-text text-left mt-5 mb-4">@(Model.Type == 2 ? "Nuevo pago" : "Nueva compra")</h1>

<div class="ps-2 col-9">
    <form asp-action="Validate" method="post">
        <div class="d-none">
            <label asp-for="CreditCardId"></label>
            <input asp-for="CreditCardId" class="form-control" />
            <span asp-validation-for="CreditCardId" class="text-danger"></span>
        </div>

        <div class="d-none">
            <label asp-for="Type"></label>
            <input asp-for="Type" class="form-control" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label asp-for="Date"></label>
            <input asp-for="Date" type="datetime-local" class="form-control" value="@Model.Date.ToString("yyyy-MM-ddTHH:mm:ss")" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" type="number" class="form-control" step="0.01" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea id="Description" asp-for="Description" type="text" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary mt-4">Registrar transacción</button>
    </form>
</div>


@section Scripts{
    <script>
    @if (Model.Type == 2) {
        <text>
            $('#Description').val('Pago de tajeta');
            $('#Description').addClass('disabled');
        </text>
    }
    </script>
}